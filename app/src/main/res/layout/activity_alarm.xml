<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp"
    tools:context=".activity.AlarmActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Reminder"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:text="Test"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="22:00"
        android:textColor="@color/white"
        android:textSize="@dimen/_50sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLAlarmMap"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/left_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:padding="@dimen/_15sdp"
            android:textSize="@dimen/_18sdp"
            android:gravity="left"
            android:text="20 min to reach destination"
            />

        <ImageView
            android:id="@+id/idGTMap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_map"
            app:tint="@color/white" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RLAlarmWeather"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVTemperature"
            android:gravity="center"
            android:text="20 Â°F"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/idIVCondition"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/idTVTemperature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@drawable/c04d" />

        <TextView
            android:id="@+id/idTVCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idIVCondition"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Cloudy"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvSnooze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="SNOOZE"
        android:textColor="@color/purple_200"
        android:textSize="@dimen/_30sdp" />

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Done"
        android:visibility="gone"
        android:textAllCaps="true"
        android:textColor="@color/purple_200"
        android:textSize="@dimen/_30sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="bottom|center"
            android:text="DISMISS"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_30sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvHoldTheButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/_15sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="HOLD THE BUTTON"
            android:textColor="@color/purple_200"
            android:textSize="@dimen/_30sdp"
            android:visibility="gone" />


    </FrameLayout>
</LinearLayout>
</layout>